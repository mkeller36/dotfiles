# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# helpful alias's
#alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias stat='bpytop'
alias ls='lsd'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
alias filemgr='ranger'
alias img2ascii='ascii-image-converter'
alias viewtrash='trash-list'
alias hist='atuin history list'
alias qman='tldr'
alias typetest='toipe'
alias word='wordgrinder'
alias fish='asciiquarium'
alias cool='coolercontrol'
alias sound='cava'
alias files='ranger'
alias devices='piper'

PS1='[\u@\h \W]\$ '

# favourite applications
# bat 
# cpufetch
# gdu
# imagemagick
# magick
# ffmpeg
# lsd
# speedtest
# ranger
# trash
# fzf "fuzzyfind"

 
neofetch

#github branch displayed on terminal setup 
parse_git_branch() {
git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
export PS1=" \u@\e[0;34m\]\h \[\e[32m\]\W\[\e[91m\]\
$(parse_git_branch)\[\e[00m\]$ "

# atuin setups
. "$HOME/.atuin/bin/env"

[[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh
eval "$(atuin init bash)"
